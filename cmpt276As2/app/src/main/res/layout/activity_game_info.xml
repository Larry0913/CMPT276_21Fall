<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".GameInfoActivity">


    <TextView
        android:id="@+id/game_dt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="10-03 14:38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Player2"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_dt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Player1"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Number Cards"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/player1_number_cards"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/player2_number_cards"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/player1_number_cards"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Sum Points"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1_number_cards" />

    <EditText
        android:id="@+id/player1_sum_points"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/player1_number_cards"
        app:layout_constraintTop_toBottomOf="@+id/player1_number_cards" />

    <EditText
        android:id="@+id/player2_sum_points"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/player1_sum_points"
        app:layout_constraintTop_toBottomOf="@+id/player2_number_cards" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Number Wagers"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1_sum_points" />

    <EditText
        android:id="@+id/player1_number_wagers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/player1_sum_points"
        app:layout_constraintTop_toBottomOf="@+id/player1_sum_points" />

    <EditText
        android:id="@+id/player2_number_wagers"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/player1_number_wagers"
        app:layout_constraintTop_toBottomOf="@+id/player2_sum_points" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Scores"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1_number_wagers" />

    <TextView
        android:id="@+id/game_result"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Winner is Player 1"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/player1_number_wagers"
        app:layout_constraintTop_toBottomOf="@+id/player2_scores" />

    <TextView
        android:id="@+id/player2_scores"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"

        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/game_result"
        app:layout_constraintTop_toBottomOf="@+id/player2_number_wagers" />

    <TextView
        android:id="@+id/player1_scores"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/player1_number_wagers"
        app:layout_constraintTop_toBottomOf="@+id/player1_number_wagers" />

</androidx.constraintlayout.widget.ConstraintLayout>
